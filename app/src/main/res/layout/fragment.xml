<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Fragment">

    <TextView
            android:id="@+id/view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_title"
            android:textSize="25dp"
            android:gravity="center"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/view_left_valute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_left_valute"
            android:textSize="15dp"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_button_refresh"
            android:layout_marginTop="99dp"
            app:layout_constraintTop_toBottomOf="@+id/view_title"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/view_right_valute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_right_valute"
            android:textSize="15dp"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/view_button_refresh"
            android:layout_marginTop="99dp"
            app:layout_constraintTop_toBottomOf="@+id/view_title"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/view_left_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_left_value"
            android:textSize="40dp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_left_valute"/>

    <TextView
            android:id="@+id/view_right_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_right_value"
            android:textSize="40dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_right_valute"/>

    <Button
            android:id="@+id/view_button_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_refresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_title"
            app:layout_constraintVertical_bias="0.685"/>

    <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="invisible"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>