<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Курс валюты ЦБРФ от 11ю33ю33"
            android:textSize="25dp"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:id="@+id/view_left_valute"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            tools:text="японская йена НННН"
            android:textSize="20dp"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_refresh"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/view_title"
            app:layout_constraintVertical_bias="0.0"
    />
    <TextView
            android:id="@+id/view_right_valute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="росийский рубль КККК"
            android:textSize="20dp"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/button_refresh"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/view_title"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
    />


    <TextView
            android:id="@+id/view_left_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100"
            android:textSize="40dp"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_left_valute"/>


    <TextView
            android:id="@+id/view_right_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100,000"
            android:textSize="40dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_right_valute"
    />


    <Button android:id="@+id/button_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_button_refresh"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_title"
            app:layout_constraintVertical_bias="0.685"/>


    <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="invisible"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>